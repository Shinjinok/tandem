<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>screen.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>vitre</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.17 </red>
      <green> 0.43 </green>
      <blue>  0.17 </blue>
    </emission>
  </animation> 

</PropertyList>
